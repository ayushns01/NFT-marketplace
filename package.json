{
  "name": "nft-marketplace",
  "version": "1.0.0",
  "description": "An educational NFT marketplace project supporting ERC-721 & ERC-1155. Includes marketplace listings, English/Dutch auctions, Vickrey auctions, bonding curves, and fractionalization. NOT AUDITED - for learning purposes only.",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "test:invariant": "forge test --match-path 'test/invariant/*.sol' -vvv",
    "test:all": "npm test && forge test",
    "coverage": "npx hardhat coverage",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:polygon": "npx hardhat run scripts/deploy.js --network polygon",
    "deploy:local": "npx hardhat run scripts/deploy.js --network hardhat",
    "slither": "slither . --filter-paths 'node_modules|lib' --exclude naming-convention",
    "clean": "npx hardhat clean && forge clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayushns01/NFT-marketplace.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ayushns01/NFT-marketplace/issues"
  },
  "homepage": "https://github.com/ayushns01/NFT-marketplace#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.22.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0"
  }
}